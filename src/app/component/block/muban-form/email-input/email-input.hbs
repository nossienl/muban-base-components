<link rel="stylesheet" href="./email-input.scss">

<div class="email-input" data-component="email-input">
  <input type="email" required="required" name="{{name}}" id="{{formName}}-{{name}}"/>
  <span class="bar"></span>
  <label for="{{formName}}-{{name}}">{{label}}</label>
  {{#if required }}
    <span class="required-message">{{requiredMessage}}</span>
  {{/if}}
  <span class="error-message">{{errorMessage}}</span>
</div>
